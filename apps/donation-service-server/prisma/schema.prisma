datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Donation {
  amount       Float?
  createdAt    DateTime  @default(now())
  donationDate DateTime?
  donorEmail   String?
  donorName    String?
  id           String    @id @default(cuid())
  updatedAt    DateTime  @updatedAt
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
